<div class="card border-0 text-start">
  <div class="card-body" />
    <div class="card-title fs-4 fw-semibold d-flex justify-content-between">
      Moabs on Storage
      <span class="badge rounded-pill <%= moabs_on_storage_ok? ? 'bg-success' : 'bg-danger' %>">
        <%= moabs_on_storage_ok? ? 'OK' : 'Error' %>
      </span>
    </div>
    <ul class="list-group border border-2 border-secondary">
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <h6 class="d-flex justify-content-start pe-2">Object / Version Counts</h6>
        <span class="badge rounded-pill <%= moab_on_storage_counts_ok? ? 'bg-success' : 'bg-danger' %>">
          <%= moab_on_storage_counts_ok? ? 'OK' : 'Error' %>
        </span>
      </li>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <h6 class="d-flex justify-content-start pe-2">MoabRecord Statuses</h6>
        <span class="badge rounded-pill <%= any_moab_record_errors? ? 'bg-danger' : 'bg-success' %>">
          <%= any_moab_record_errors? ? 'Error' : 'OK' %>
        </span>
      </li>
    </ul>
  </div>
</div>
